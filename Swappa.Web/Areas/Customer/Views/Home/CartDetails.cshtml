@{
    Layout = "/Views/Shared/_LayoutHeadAndFooter.cshtml";
}
<div id="Cart_checkout">
<section id="section_usp_bar_v2">
    <div class="row text-center mt-2">
        <div class="col">
            <span class="icon cl-blue-d">
                <i class="fa fa-truck"></i>
                Free Shipping
            </span>
        </div>
        <div class="d-none d-sm-block col">
            <span class="icon cl-blue-d">
                <i class="fa fa-ban"></i>
                No Junk, No Jerks
            </span>
        </div>
        <div class="d-none d-sm-block col">
            <span class="icon cl-blue-d">
                <i class='bx bx-support'> </i>
                24/7/365 Support
            </span>
        </div>
        <div class="d-none d-sm-block col">
            <span class="icon cl-blue-d ">
                <i class='bx bxl-paypal'></i>
                PayPal Protection
            </span>
        </div>
    </div>
</section>
<section class="section_breadcrumbs">

    <nav aria-label="breadcrumb" class="p-1 ">
        <ul class="breadcrumb bg-cart">
            <li class="breadcrumb-item ">
                <a class="color-green" href="./single-product.html">Swappa</a>
            </li>
            <li class="breadcrumb-item active">
                <a href="./single-product.html">Cart</a>
            </li>
        </ul>
    </nav>
</section>
<section class="section_top">
    <div class="row">
        <div class="col-xs-6 col-md-9">
            <h1 class="mt-1">Cart</h1>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="alert alert-success text-center">
                2 items,
                $
                <strong> 386 </strong>total
            </div>
        </div>
    </div>
</section>
<section class="section_billboard mb-2" v-for="(items,index) in dataMain" :key="index">
    <div class="row">
        <div class="col-xs-12 col-md-9">
            <div class="cart_items">
                <div>
                    <div class="cart_item">
                        <div class="row">
                            <div class="col-xs-3 col-md-2" align="center">
                                <a href="./single-product.html">
                                        <img :src="items.product_Image"
                                         alt="" height="100">
                                </a>
                                    <p class="text-center" style="color: red;" v-on:click="deleteOrdersAndOrderDetails(index)">Remove</p>
                            </div>
                            <div class="col-xs-9 col-md-10">
                                <div class="row">
                                    <div class="col-xs-9 col-md-8" align="left">
                                        <p class="color-green f-w-600">
                                            {{items.product_Name}}
                                        </p>
                                    </div>
                                    <div class="col-xs-3 col-md-4" align="right">
                                            <p class="color-green f-w-600">{{formatCurrency(items.product_Price * items.product_Quantity) }}</p>
                                    </div>
                                </div>
                                <hr class="m-0">

                                <div class="row mt-2 mb-1">
                                    <div class="col-xs-12">
                                        <div class="listing_info">
                                            <span class="color-green">
                                                {{items.product_Name}}
                                            </span>
                                            <span> • Fair</span>
                                            <span> • T-Mobile</span>
                                            <span> • A2275 </span>
                                            <span> • Black</span>
                                            <span> • 64 GB</span>
                                            <div class="headline color-dark">
                                                    {{items.product_Name}} | Fair | Trusted
                                                Business Seller | 30 Day Warranty | Ships Fast
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="m-0">

                                <div class="row mt-2">
                                    <div class="col-xs-12 col-md-8">
                                        <div class="seller_info">
                                            <div class="seller_image float-left mr-1 position-relative">
                                                    <img src="https://static.swappa.com/images/cache/86/35/8635efd81fd656c3d7d51fcbf03aa785.jpg"
                                                     alt="" height="50">

                                            </div>
                                            <div class="seller_name">
                                                The Cellular Resource
                                            </div>
                                            <div class="text-nowrap" style="overflow: hidden;">
                                                <span>
                                                    <i class='cl-star2 bx bxs-star'></i><i class='cl-star2 bx bxs-star'></i><i class='cl-star2 bx bxs-star'></i><i class='cl-star2 bx bxs-star'></i><i class='cl-star2 bx bxs-star'></i>
                                                    <sub>6559</sub>
                                                    -
                                                    <span>Raleigh, NC</span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-4">
                                        <div>
                                            <a href="#"
                                               class="btn btn-primary btn-block btn_buy_item cart_item_checkout p-2 bgg-green">
                                                Buy
                                                    Now: {{formatCurrency(totalPrices[index])}}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="mt-3">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="col-12">
                                    <p class="color-dark">Get your item faster.</p>

                                </div>
                            </div>
                            <div class="col-12 d-flex">
                                    <input type="checkbox" class="check_express" v-model="isCheckedItems[index]" v-on:click="toggleItemChecked(index)">
                                <a href="./single-product.html" class="ml-2 color-dark">
                                    Express Shipping +
                                    $39.00
                                </a>
                                    <span class="color-green ml-1">= Total {{formatCurrency(totalPrices[index]) }}</span>
                            </div>

                        </div>
                        <hr class="mt-2">

                        <div class="pay-p-more">
                            <span class="cl-blue-d f_s_1" style="font-weight: 700;">
                                <i class='cl-blue-d bx bxl-paypal'></i>
                                Credit

                            </span>
                            <span class="" style="font-size: 12px;">
                                No Interest if paid in full in 6 months.
                                <a href="./single-product.html">
                                    Learn
                                    more
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-3">
            <div class="well f-s-12 ">
                <p class="color-dark">Use the Cart to keep track of listings you want to buy.</p>
                <p class="color-dark">Remember, items in your cart can still be bought by other users.</p>
                <p class="color-dark">To buy a listing in your cart click on its Buy Now button.</p>
            </div>
        </div>
    </div>
</section>

<section class="section_trailer" style="margin-bottom: 10px">
    <hr class="line-last" />
    <p class="text-center">
        Disclosure: This site contains affiliate links to other sites.
        We may receive commissions for purchases made through these links.
    </p>
</section>
</div>
<script src="~/js/customer_crud/checkout_crud.js"></script>